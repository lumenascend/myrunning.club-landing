---
import BaseHead from '../components/global/BaseHead.astro';
import Header from '../components/global/Header.astro';
import Footer from '../components/global/Footer.astro';
const { title } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <BaseHead title={title}/>
  </head>
  <body class="max-w-7xl m-auto text-white overflow-hidden flex flex-col min-h-screen">
    <div class="fixed top-0 left-0 w-full h-full z-[-1]">
      <video class="w-full h-full object-cover" autoplay muted loop>
        <source src="/video-bg.mp4" type="video/mp4">
      </video>
      <div class="absolute top-0 left-0 w-full h-full bg-black bg-opacity-50 backdrop-blur-md"></div>
    </div>
    <div class="relative z-10 flex flex-col flex-grow">
      <main class="flex-grow">
        <slot />
      </main>
      <Footer class="mt-auto" />
    </div>
  </body>
</html>